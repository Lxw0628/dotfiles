# exec_always --no-startup-id killall random_wallpaper.sh;~/.config/i3/scripts/random_wallpaper.sh
# 
exec --no-startup-id setxkbmap -option caps:escape &
# xset
exec_always --no-startup-id xset r rate 250 50 &





### start programs
# 默认启用外接屏幕
exec --no-startup-id xrandr --output HDMI-2 --mode 1920x1080 --rate 120.00 --output eDP-1 --off
# exec --no-startup-id xrandr --output HDMI-1-2 --mode 1920x1080 --rate 120.00 --output eDP-1-1 --off
# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3
