exec_always --no-startup-id killall random_wallpaper.sh; feh --bg-fill --no-fehbg ~/Pictures/wallpapers/catppuccin/mocha.png
# exec_always --no-startup-id killall random_wallpaper.sh; feh --bg-fill --no-fehbg ~/Pictures/wallpapers/osu_bg/BG.jpg
