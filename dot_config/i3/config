### Keybinds
# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
# 亮度
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5
# start a terminal
# bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
# bindsym $mod+Return exec --no-startup-id alacritty
# bindsym $mod+Return exec --no-startup-id st
bindsym $mod+Return exec --no-startup-id kitty
# 浏览器 火狐
bindsym $mod+w exec --no-startup-id firefox
# 关闭存在的通知
bindsym $mod+d exec --no-startup-id dunstctl close-all
# 切换显示通知
bindsym $mod+Shift+d exec --no-startup-id sh ~/Scripts/dunst/toggle_dunst.sh
# bindsym $mod+e exec --no-startup-id alacritty --class yazi_floating -e yazi
bindsym $mod+e exec --no-startup-id thunar
# rofi
bindsym $alt+space exec --no-startup-id sh $HOME/.config/rofi/bin/launcher
bindsym $mod+Ctrl+a exec --no-startup-id sh $HOME/.config/rofi/bin/screenshot
bindsym $mod+Shift+q exec --no-startup-id sh $HOME/.config/rofi/bin/powermenu
bindsym Ctrl+$alt+space exec --no-startup-id sh $HOME/.config/rofi/bin/runner
# flameshot
bindsym Ctrl+$alt+a exec --no-startup-id flameshot gui
exec --no-startup-id flameshot &



### WorkSpaces
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
# quickly switch workspace of left or right
bindsym $mod+Ctrl+h workspace prev_on_output
bindsym $mod+Ctrl+l workspace next_on_output
# 重复按下mod+wsn 跳回前一个工作区
# workspace_auto_back_and_forth yes
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
# bar toggle, hide or show
# bindsym $mod+b bar mode toggle
bindsym $mod+b exec --no-startup-id polybar-msg cmd toggle
# i3lock
mode "i3lock: Return to lock/Escape to Cancel" {
    bindsym Return mode "default" exec --no-startup-id sh $HOME/Scripts/rofi/lockscreen.sh
    bindsym Escape mode "default"
}
# lock screen
bindsym Ctrl+$mod+$alt+l mode "i3lock: Return to lock/Escape to Cancel"



### Windows
# window gap
gaps inner 0
gaps outer 0
smart_gaps on
# 标题居中
title_align center
# 新窗口的默认边框样式
for_window [class="^.*"] border pixel 1
default_border pixel 1
default_floating_border pixel 2
hide_edge_borders both
# 浮动窗口最大尺寸
# floating_maximum_size 1600 x 900
# 鼠标切换浮动
bindsym --whole-window $mod+button2 floating toggle
# popups
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
# float programs
for_window [class="yazi_floating"] floating enable
for_window [title="图片查看器"] floating enable
for_window [title="图片查看"] floating enable
## sticky programs
# wemeetapp always show in all workspaces.
for_window [class="wemeetapp"] sticky disable
for_window [class="wemeetapp"] floating enable
# hide | show window
# exec --no-startup-id alacritty --class scratchpad_alacritty
# for_window [class="scratchpad_alacritty"] move scratchpad
bindsym $mod+Shift+u move scratchpad
bindsym $mod+u scratchpad show
# sticky toggle PIN window
bindsym $mod+p sticky toggle
# 焦点跟随鼠标
focus_follows_mouse yes
# 禁用焦点环绕
focus_wrapping no
# kill focused window
bindsym $mod+q kill
# change focus, 并移动焦点到窗口中心
bindsym $mod+h focus left, exec --no-startup-id ~/.config/i3/scripts/move_mouse_to_focus_center.sh
bindsym $mod+j focus down, exec --no-startup-id ~/.config/i3/scripts/move_mouse_to_focus_center.sh
bindsym $mod+k focus up, exec --no-startup-id ~/.config/i3/scripts/move_mouse_to_focus_center.sh
bindsym $mod+l focus right, exec --no-startup-id ~/.config/i3/scripts/move_mouse_to_focus_center.sh
# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal orientation
# bindsym $mod+backslash split h
# split in vertical orientation
# bindsym $mod+Shift+backslash split v
# enter fullscreen mode for the focused container
bindsym $mod+g fullscreen toggle
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+backslash layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+f floating toggle
# change focus between tiling / floating windows
bindsym $mod+f focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent
# focus the child container
bindsym $mod+Shift+a focus child
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 1 px
        bindsym j resize grow height 1 px
        bindsym k resize shrink height 1 px
        bindsym l resize grow width 1 px
        bindsym Shift+h resize shrink width 10 px
        bindsym Shift+j resize grow height 10 px
        bindsym Shift+k resize shrink height 10 px
        bindsym Shift+l resize grow width 10 px
        bindsym Alt+h resize shrink width 10 px or 10 ppt
        bindsym Alt+j resize grow height 10 px or 10 ppt
        bindsym Alt+k resize shrink height 10 px or 10 ppt
        bindsym Alt+l resize grow width 10 px or 10 ppt
        bindsym equal resize set width 50 ppt
        bindsym equal resize set height 50 ppt
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
